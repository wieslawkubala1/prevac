<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="bGetDataFromWeatherAPI" Content="1. Get data from weather API and save to database" 
                HorizontalAlignment="Left" Margin="33,0,0,385" VerticalAlignment="Top" Click="bGetDataFromWeatherAPI_Click"/>
        <Button x:Name="bDrawData" Content="2. Draw chart from data in database" HorizontalAlignment="Left" Height="20"
                Margin="369,0,0,0" VerticalAlignment="Top" Click="bDrawData_Click"/>
    </Grid>
</Window>
